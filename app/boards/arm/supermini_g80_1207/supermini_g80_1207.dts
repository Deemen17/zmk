/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/led/led.h>

#include "supermini_g80_1207-transforms.dtsi"
#include "supermini_g80_1207-pinctrl.dtsi"
#include "supermini_g80_1207-layouts.dtsi"


/ {
    model = "Supermini G80-1207";
    compatible = "DEEMEN17-WORKS";

    chosen {
        zephyr,code-partition = &code_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zmk,battery = &vbatt;
        zmk,kscan = &kscan0;
        // zmk,matrix-transform = &default_transform;
        zmk,studio-rpc-uart = &cdc_acm_uart;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        // diode-direction = "col2row";
        // row-gpios
        //     = <&gpio0 17  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 0 */
        //     , <&gpio0 22  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 1 */
        //     , <&gpio0 11  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 2 */
        //     , <&gpio1  4  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 3 */
        //     , <&gpio0  9  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 4 TRUE */
        //     , <&gpio0 31  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 5 */
        //     , <&gpio0 29  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 6 */
        //     , <&gpio0  2  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 7 */
        //     , <&gpio0 20  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 8 TRUE */ 
        //     , <&gpio1 15  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 9 */
        //     , <&gpio1 13  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 10 */
        //     , <&gpio1  0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 11 TRUE */
        //     , <&gpio0 24  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   /* ROW 12 TRUE */
        //     ;

        // col-gpios
        //     = <&mcp_col  3  GPIO_ACTIVE_HIGH>   /* COL 0 */
        //     , <&mcp_col  2  GPIO_ACTIVE_HIGH>   /* COL 1 */
        //     , <&mcp_col  1  GPIO_ACTIVE_HIGH>   /* COL 2 */
        //     , <&mcp_col  0  GPIO_ACTIVE_HIGH>   /* COL 3 */
        //     , <&mcp_col  7  GPIO_ACTIVE_HIGH>   /* COL 4 */
        //     , <&mcp_col  6  GPIO_ACTIVE_HIGH>   /* COL 5 */
        //     , <&mcp_col  5  GPIO_ACTIVE_HIGH>   /* COL 6 */
        //     , <&mcp_col  4  GPIO_ACTIVE_HIGH>   /* COL 7 */
        //     ;

        diode-direction = "row2col";
        row-gpios
            = <&mcp_row 15  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 0 */
            , <&mcp_row  6  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 1 */
            , <&mcp_row 14  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 2 */
            , <&mcp_row  5  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 3 */
            , <&mcp_row  3  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 4 */
            , <&mcp_row 13  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 5 */
            , <&mcp_row  4  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 6 */
            , <&mcp_row 12  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 7 */
            , <&mcp_row  1  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 8 */ 
            , <&mcp_row 11  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 9 */
            , <&mcp_row 10  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 10 */
            , <&mcp_row  0  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 11 */
            , <&mcp_row  2  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   /* ROW 12 */
            ;

        col-gpios
            = <&mcp_col  3  GPIO_ACTIVE_LOW>   /* COL 0 */
            , <&mcp_col  2  GPIO_ACTIVE_LOW>   /* COL 1 */
            , <&mcp_col  1  GPIO_ACTIVE_LOW>   /* COL 2 */
            , <&mcp_col  0  GPIO_ACTIVE_LOW>   /* COL 3 */
            , <&mcp_col  7  GPIO_ACTIVE_LOW>   /* COL 4 */
            , <&mcp_col  6  GPIO_ACTIVE_LOW>   /* COL 5 */
            , <&mcp_col  5  GPIO_ACTIVE_LOW>   /* COL 6 */
            , <&mcp_col  4  GPIO_ACTIVE_LOW>   /* COL 7 */
            ;

    };

    EXT_POWER {
        compatible = "zmk,ext-power-generic";
        control-gpios = <&gpio0 13 GPIO_ACTIVE_HIGH>;
        init-delay-ms = <50>;
    };

    vbatt: vbatt {
        compatible = "zmk,battery-nrf-vddh";
    };

    leds {
        compatible = "gpio-leds";
        // blue_led: led_0 {
        //     gpios = <&gpio0 15 GPIO_ACTIVE_HIGH>;
        // };
        // led_caps: led_caps {
        //     gpios = <&gpio0  2 GPIO_ACTIVE_HIGH>;
        // };
        // led_num: led_num {
        //     gpios = <&gpio1 13 GPIO_ACTIVE_HIGH>;
        // };
        // led_scroll: led_scroll {
        //     gpios = <&gpio1 15 GPIO_ACTIVE_HIGH>;
        // };
    };

};

&i2c0 {
    status = "okay";
    compatible = "nordic,nrf-twi";
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
    clock-frequency = <I2C_BITRATE_FAST>;

    mcp_row: mcp23017@20 {
        compatible = "microchip,mcp230xx";
        status = "okay";
        gpio-controller;
        reg = <0x20>;
        #gpio-cells = <2>;
        ngpios = <16>;
        int-gpios = <&gpio0 10 GPIO_ACTIVE_LOW>;
    };

    mcp_col: mcp23017@21 {
        compatible = "microchip,mcp230xx";
        status = "okay";
        gpio-controller;
        reg = <0x21>;
        #gpio-cells = <2>;
        ngpios = <16>;
        int-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;
    };
};

&adc {
    status = "okay";
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

zephyr_udc0: &usbd {
    status = "okay";
};

&usbd {
    status = "okay";
    cdc_acm_uart: cdc_acm_uart {
        compatible = "zephyr,cdc-acm-uart";
    };
};

&flash0 {
    /*
     * For more information, see:
     * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
     */
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        sd_partition: partition@0 {
            reg = <0x00000000 0x00026000>;
        };
        code_partition: partition@26000 {
            reg = <0x00026000 0x000c6000>;
        };

        /*
         * The flash starting at 0x000ec000 and ending at
         * 0x000f3fff is reserved for use by the application.
         */

        /*
         * Storage partition will be used by FCB/LittleFS/NVS
         * if enabled.
         */
        storage_partition: partition@ec000 {
            reg = <0x000ec000 0x00008000>;
        };

        boot_partition: partition@f4000 {
            reg = <0x000f4000 0x0000c000>;
        };
    };
};